{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.railway.simple",
    "dockerContext": "."
  },
  "deploy": {
    "startCommand": "supervisord -c /etc/supervisor/conf.d/archon.conf",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}